<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Карта Карно"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:textSize="20dp"/>
    <GridView
        android:id="@+id/karno_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:numColumns="4"></GridView>
    <TextView
        android:id="@+id/open_diagram_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Открыть Блок-схему"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Сокращенная функция"/>
    <TextView
        android:id="@+id/func_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="looooooooooooooooooooooooong loooooooooooooooooong Function"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/go_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="Назад"
        android:background="#50000000"
        android:padding="10dp"/>

</LinearLayout>